<div class="m-5">
  <h1 class="text-center">Create a new Restaurant</h1>
  <%= simple_form_for(@restaurant) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, as: :select, collection: Restaurant::CATEGORY %>
    <%= f.submit class: "btn btn-primary" %>
<% end %>
</div>
