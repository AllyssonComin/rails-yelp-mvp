<div class="d-flex justify-content-between px-3">
  <h1 class="text-center mt-5">All Restaurants</h1>
  <%=  link_to "Create new Restaurant", new_restaurant_path, class: "btn btn-primary my-5" %>
</div>

<div class="row m-0">
  <% @restaurants.each do |restaurant| %>
    <%= link_to restaurant_path(restaurant), class: "col-3" do %>
      <div class="restaurant-card">
        <h4><%= restaurant.name %></h4>
        <h6><%= restaurant.phone_number %></h6>
      </div>
    <% end %>
  <% end %>
</div>
