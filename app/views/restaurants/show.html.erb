<h1 class="text-center m-5" ><%= @restaurant.name %></h1>
<div class="box">
  <div class="card-show">
    <div class="row">
      <%= link_to "Back", restaurants_path, class: "col-2 btn btn-primary btn-lg" %>
      <div class="col-8">
        <div class="row ">
          <div class="col-6">
            <p>Phone: <strong><%= @restaurant.phone_number %></strong>
          </div>
          <div class="col-6">
            <p>Category: <strong><%= @restaurant.category.capitalize %></strong></p>
          </div>
          <div class="col-12">
            <p>Address: <strong><%= @restaurant.address %></strong></p>
          </div>
        </div>
      </div>
      <%= link_to "Add Review", new_restaurant_review_path(@restaurant), class: "col-2 btn btn-primary btn-lg" %>
    </div>
  </div>
</div>

<%# reviews %>
<div class="m-5">
  <h3 class="text-center">Reviews</h3>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <div class="card-show">
        <li class="list-group-item">

          <%= review.content %>
          <%= link_to "Delete",
            review_path(review),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
          %>

        </li>
      </div>
    <% end %>
  </ul>
</div>
